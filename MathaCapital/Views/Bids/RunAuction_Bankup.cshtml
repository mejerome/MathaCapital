@model MathaCapital.Models.BankPercViewModel

@{
    ViewData["Title"] = "RunAuction";
}

<h2>Percentage Allocation for Participating Banks</h2>

<form asp-controller="Bids" asp-action="PerAuctionRun" method="post">
    <div class="row">
        <div class="col-lg-2">
            <h5>Bank Name</h5>
        </div>
        <div class="col-lg-2">
            <h5>Percentage (%)</h5>
        </div>

    </div>
    @foreach (var item in Model.perbank)
    {
        <div class="row">
            <div class="col-lg-2">
                <input type="text" readonly value="@Html.DisplayFor(modelItem => item.BankName)" />
            </div>
            <div class="col-md-2">
                <input type="text" class="form-inline" value="@Html.DisplayFor(modelItem => item.Percent)" />
            </div>
        </div>
    }
    <br />
    <button class="btn btn-primary" type="submit">Run Auction</button> 
</form>
<p>@ViewData["Message"]</p>
